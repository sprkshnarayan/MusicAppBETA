<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#390202"
    android:padding="10dip"
    android:weightSum="1">

    <ImageView
        android:id="@+id/img_listitem_file"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/head"
        />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
        android:layout_weight="1.45">

            <TextView
                android:id="@+id/txt_listitem_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="dummy file"
                android:textColor="#ff1100"
                android:textStyle="bold" />
           <TextView
               android:id="@+id/artist"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:text="artist"
               android:textColor="#0429fe"
               android:textStyle="italic"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_listitem_albumname"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Dummy Singer"
                    android:textColor="#fefefe"
                    style="@style/AppTheme"
                    />
                <TextView
                    android:id="@+id/txt_listitem_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="1:40"
                    android:textColor="#fbfbfb"
                    style="@style/AppTheme"
                    />



            </LinearLayout>


        </LinearLayout>


</LinearLayout>